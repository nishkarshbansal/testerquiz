<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Teacher">

    <LinearLayout
        android:id="@+id/linearLayout2"
        android:layout_width="370dp"
        android:layout_height="580dp"
        android:layout_marginTop="18dp"
        android:layout_marginBottom="63dp"
        android:orientation="vertical"
        android:paddingLeft="20dp"
        android:paddingRight="20dp"
        app:layout_constraintBottom_toTopOf="@+id/finish_t"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.122">

        <TextView
            android:id="@+id/question_t"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:gravity="center_vertical"
            android:text="Question:" />

        <EditText
            android:id="@+id/editques_t"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:ems="10"
            android:hint='"Question"'
            android:inputType="textPersonName" />

        <TextView
            android:id="@+id/op1_t"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:gravity="center_vertical"
            android:text="Option 1:" />

        <EditText
            android:id="@+id/editop1_t"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:ems="10"
            android:hint='"Option 1"'
            android:inputType="textPersonName" />

        <TextView
            android:id="@+id/op2_t"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:gravity="center_vertical"
            android:text="Option 2:" />

        <EditText
            android:id="@+id/editop2_t"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:ems="10"
            android:hint='"Option 2"'
            android:inputType="textPersonName" />

        <TextView
            android:id="@+id/op3_t"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:gravity="center_vertical"
            android:text="Option 3:" />

        <EditText
            android:id="@+id/editop3_t"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:ems="10"
            android:hint='"Option 3"'
            android:inputType="textPersonName" />

        <TextView
            android:id="@+id/op4_t"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:gravity="center_vertical"
            android:text="Option 4:" />

        <EditText
            android:id="@+id/editop4_t"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:ems="10"
            android:hint='"Option 4"'
            android:inputType="textPersonName" />

        <TextView
            android:id="@+id/answer_t"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:gravity="center_vertical"
            android:text="Answer:" />

        <EditText
            android:id="@+id/editans_t"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:ems="10"
            android:hint='"Answer"'
            android:inputType="textPersonName" />
    </LinearLayout>

    <Button
        android:id="@+id/save_t"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="60dp"
        android:text="Save"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="@+id/linearLayout2"
        app:layout_constraintTop_toBottomOf="@+id/linearLayout2" />

    <Button
        android:id="@+id/add_t"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Add New"
        app:layout_constraintBottom_toBottomOf="@+id/save_t"
        app:layout_constraintEnd_toEndOf="@+id/linearLayout2" />

    <Button
        android:id="@+id/finish_t"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="22dp"
        android:text="Finish"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/add_t"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/save_t"
        app:layout_constraintTop_toBottomOf="@+id/linearLayout2" />
</androidx.constraintlayout.widget.ConstraintLayout>